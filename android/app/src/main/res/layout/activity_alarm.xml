<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:padding="24dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:30"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:fontFamily="sans-serif"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="28sp"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeStepGranularity="2sp" />

        <TextView
            android:id="@+id/am_pm_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AM"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/current_time"
            app:layout_constraintBottom_toBottomOf="@id/current_time"
            app:layout_constraintBaseline_toBaselineOf="@id/current_time" />



        <TextView
            android:id="@+id/alarm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wake Up!"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/current_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="16sp"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeStepGranularity="1sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/math_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/dark_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/alarm_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/task_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solve this problem to dismiss:"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/math_problem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4 Ã— 7 = ?"
                    android:textColor="@color/text_primary"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="18sp"
                    app:autoSizeMaxTextSize="26sp"
                    app:autoSizeStepGranularity="1sp" />

                <EditText
                    android:id="@+id/answer_input"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:inputType="none"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="@color/text_primary"
                    android:hint="Enter Answer"
                    android:textColorHint="@color/text_secondary"
                    android:background="@drawable/rounded_edit_text_background"
                    android:fontFamily="sans-serif"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_marginBottom="12dp" />

                <!-- Custom Numpad -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="4"
                    android:layout_marginBottom="12dp">

                    <!-- Row 1: 1, 2, 3 -->
                    <Button
                        android:id="@+id/num_1"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/dark_surface_light"
                        android:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/num_2"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/dark_surface_light"
                        android:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/num_3"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="3"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/dark_surface_light"
                        android:fontFamily="sans-serif" />

                    <!-- Row 2: 4, 5, 6 -->
                    <Button
                        android:id="@+id/num_4"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="4"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/dark_surface_light"
                        android:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/num_5"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/dark_surface_light"
                        android:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/num_6"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="6"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/dark_surface_light"
                        android:fontFamily="sans-serif" />

                    <!-- Row 3: 7, 8, 9 -->
                    <Button
                        android:id="@+id/num_7"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="7"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/dark_surface_light"
                        android:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/num_8"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/dark_surface_light"
                        android:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/num_9"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="9"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/dark_surface_light"
                        android:fontFamily="sans-serif" />

                    <!-- Row 4: Backspace, 0, Clear -->
                    <Button
                        android:id="@+id/num_backspace"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="âŒ«"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/primary"
                        android:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/num_0"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/dark_surface_light"
                        android:fontFamily="sans-serif" />

                    <Button
                        android:id="@+id/num_clear"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:text="C"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:background="@color/primary"
                        android:fontFamily="sans-serif" />

                </GridLayout>

                <Button
                    android:id="@+id/verify_button"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="Verify Answer"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/gradient_button_background"
                    android:elevation="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Keep bottom message small so important actions stay above fold -->
        <TextView
            android:id="@+id/alarm_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Complete the math problem to stop the alarm"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/math_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView> 